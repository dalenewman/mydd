<transformalize>

  <environments>
    <add name="one">
      <parameters>
        <add name="Mode" value="default" />
      </parameters>
    </add>
  </environments>

  <processes>
    <add name="RecipeTags" mode="@(Mode)">

      <connections>
        <add name="input" provider="postgresql" port="5432" database="MyDD" user="postgres" password="devdev1!" />
        <add name="output" database="TflMyDD" />
      </connections>
      
      <entities>
        <add name="app_recipe_tags" 
             alias="RecipeTags" 
             prefix="recipe_tags_" 
             version="modified" 
             delete="true"
             query="SELECT id,recipe_id,tag_id,created,modified FROM app_recipe_tags">
          <fields>
            <add name="id" type="int32" primary-key="true" />
            <add name="recipe_id" type="int32" label="recipe id" />
            <add name="tag_id" type="int32" label="tag id" />
            <add name="created" type="datetime" />
            <add name="modified" type="datetime" />
          </fields>
        </add>
        <add name="app_tag" 
             alias="Tag" 
             prefix="tag_" 
             version="modified"
             query="SELECT id,name,created,modified FROM app_tag">
          <fields>
            <add name="id" type="int32" primary-key="true" />
            <add name="name" length="128" />
            <add name="created" type="datetime" />
            <add name="modified" type="datetime" />
          </fields>
        </add>
      </entities>
      <relationships>
        <add left-entity="RecipeTags" left-field="tag_id" right-entity="Tag" right-field="tag_id" />
      </relationships>
    </add>
  </processes>
</transformalize>