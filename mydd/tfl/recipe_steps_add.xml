<transformalize>
  <processes>
    <add name="RecipeStepsAdd"
         star-enabled="false"
         view-enabled="false"
         parallel="false"
         mode="@(Mode)">
      
      <connections>
        <add name="input" provider="file" direct="true" file="C:\Code\mydd\mydd\tfl\output\steps.xml" />
        <add name="output" server="localhost" database="TflMyDD" />
      </connections>
      
      <entities>
        <add name="Element" connection="input">
          <fields>
            <add name="xml" length="max" output="false">
              <transforms>
                <add method="fromxml" xml-mode="All">
                  <fields>
                    <add name="add" length="max" read-inner-xml="false" />
                  </fields>
                </add>
              </transforms>
            </add>
          </fields>
        </add>
      </entities>
    </add>
  </processes>
</transformalize>