<add name="RecipeOrchard" mode="@(Mode)" read-only="true">

  <parameters>
    <add name="Mode" value="init" />
    <add name="Password" value="devdev1!" />
    <add name="Folder" value="E:\Code\MyDD" />
  </parameters>

  <connections>
    <add name="input" provider="postgresql" port="5432" database="TflMyDD" user="postgres" password="@(Password)" />
    <add name="output" 
         provider="file" 
         file="@(Folder)\mydd\tfl\output\recipe-output.xml" 
         header="&lt;Orchard&gt;&lt;Recipe&gt;&lt;Name&gt;Generated by Transformalize&lt;/Name&gt;&lt;Author&gt;dalenewman&lt;/Author&gt;&lt;/Recipe&gt;&lt;Data&gt;" 
         footer="&lt;/Data&gt;&lt;/Orchard&gt;" 
         delimiter="" />
  </connections>

  <templates>
    <add name="recipe" engine="velocity" file="@(Folder)\mydd\tfl\templates\recipe.vtl" />
    <add name="page" engine="velocity" file="@(Folder)\mydd\tfl\templates\page.vtl" />
  </templates>

  <actions>
    <add type="tfl" mode="@(Mode)" url="@(Folder)\mydd\tfl\recipe.xml?Mode=@(Mode)&Password=@(Password)&Folder=@(Folder)" before="true" after="false" />
    <add type="open" mode="init" file="@(Folder)\mydd\tfl\output\recipe-output.xml" />
  </actions>
  
  <entities>
    <add name="RecipeStar">
      <fields>
        <add name="recipe_id" type="int32" label="recipe id" output="false"/>
        <add name="recipe_author_id" type="int32" label="recipe author id" output="false"/>
        <add name="recipe_name" length="512" label="recipe name" output="false"/>
        <add name="recipe_description" label="recipe description" output="false"/>
        <add name="recipe_servings" type="int32" label="recipe servings" output="false"/>
        <add name="recipe_prep_time" type="int32" label="recipe prep time" output="false"/>
        <add name="recipe_cook_time" type="int32" label="recipe cook time" output="false"/>
        <add name="recipe_difficulty" type="int16" label="recipe difficulty" output="false"/>
        <add name="recipe_inspiration" length="512" label="recipe inspiration" output="false"/>
        <add name="recipe_name_slug" length="512" label="recipe name slug" output="false"/>
        <add name="author_first" length="128" label="author first" output="false"/>
        <add name="author_last" length="128" label="author last" output="false"/>
        <add name="author_avatar" length="200" label="author avatar" output="false"/>
        <add name="author_bio" label="author bio" output="false"/>
        <add name="author_full_name" length="128" label="author full name" output="false" />
        <add name="tags" length="255" output="false"/>
        <add name="step_content" length="max" output="false"/>
        <add name="ingredient_content" length="max" output="false"/>
        <add name="carousel_images" length="4000" output="false" />
        <add name="carousel_image_count" type="long" default="0" output="false" />
      </fields>
      <calculated-fields>
        <add name="content" length="max" t="copy(*).velocity(recipe).htmlencode()" output="false" />
        <add name="page" length="max" t="copy(*).velocity(page)" primary-key="true" />
      </calculated-fields>
    </add>
  </entities>
  <relationships></relationships>
</add>