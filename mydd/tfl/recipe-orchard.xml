<transformalize>
  <processes>
    <add name="RecipeOrchard">
      
      <connections>
        <add name="input" database="TflMyDD" />
        <add name="output" provider="file" file="c:\temp\recipe-output.xml" header="&lt;Orchard&gt;&lt;Recipe&gt;&lt;Name&gt;Generated by Transformalize&lt;/Name&gt;&lt;Author&gt;dalenewman&lt;/Author&gt;&lt;/Recipe&gt;&lt;Data&gt;" footer="&lt;/Data&gt;&lt;/Orchard&gt;" delimiter=" " />
      </connections>
      
      <templates>
        <add name="recipe" file="c:\Code\MyDD\mydd\tfl\templates\recipe.vtl" />
        <add name="page" file="c:\Code\MyDD\mydd\tfl\templates\page.vtl" />
      </templates>
      
      <actions>
        <add action="tfl" mode="*" url="c:\Code\MyDD\mydd\tfl\recipe.xml?Mode=init" before="true" after="false" />
        <add action="tfl" mode="*" url="c:\Code\MyDD\mydd\tfl\recipe.xml?Mode=first" before="true" after="false" />
        <add action="open" file="c:\temp\recipe-output.xml">
          <modes>
            <add mode="first" />
            <add mode="default" />
          </modes>
        </add>
      </actions>
      
      <entities>
        <add name="RecipeStar" detect-changes="false">
          <fields>
            <add name="recipe_id" type="int32" label="recipe id" output="false"/>
            <add name="recipe_author_id" type="int32" label="recipe author id" output="false"/>
            <add name="recipe_name" length="512" label="recipe name" output="false"/>
            <add name="recipe_description" label="recipe description" output="false"/>
            <add name="recipe_servings" type="int32" label="recipe servings" output="false"/>
            <add name="recipe_prep_time" type="int32" label="recipe prep time" output="false"/>
            <add name="recipe_cook_time" type="int32" label="recipe cook time" output="false"/>
            <add name="recipe_difficulty" type="int16" label="recipe difficulty" output="false"/>
            <add name="recipe_inspiration" length="512" label="recipe inspiration" output="false"/>
            <add name="recipe_name_slug" length="512" label="recipe name slug" output="false"/>
            <add name="author_first" length="128" label="author first" output="false"/>
            <add name="author_last" length="128" label="author last" output="false"/>
            <add name="author_avatar" length="200" label="author avatar" output="false"/>
            <add name="author_bio" label="author bio" output="false"/>
            <add name="author_full_name" length="128" label="author full name" output="false" />
            <add name="tags" length="255" output="false"/>
            <add name="steps" length="2048" output="false"/>
            <add name="ingredients" length="1024" output="false"/>
          </fields>
          <calculated-fields>
            <add name="content" length="max" t="velocity(recipe,*).htmlencode()" primary-key="true" output="false" />
            <add name="page" length="max" t="velocity(page,*).collapse()" primary-key="true" />
          </calculated-fields>
        </add>
      </entities>
      <relationships>
      </relationships>
    </add>
  </processes>
</transformalize>