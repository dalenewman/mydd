<transformalize>
  <processes>
    <add name="RecipeIngredientsFlat"
         star-enabled="false"
         parallel="false"
         mode="@(Mode)">
      
      <connections>
        <add name="input" server="localhost" database="TflMyDD" />
        <add name="output" server="localhost" database="TflMyDD" />
      </connections>
      
      <entities>
        <add name="RecipeIngredientsAddElement">
          <fields>
            <add name="add" length="max" output="false" >
              <transforms>
                <add method="fromxml" root="add" xml-mode="First">
                  <fields>
                    <add name="id" type="int" primary-key="true" />
                    <add name="content" length="max" />
                  </fields>
                </add>
              </transforms>
            </add>
          </fields>
        </add>
      </entities>
    </add>
  </processes>
</transformalize>