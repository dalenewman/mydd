<transformalize>
  <processes>
    <add name="RecipeStepsToXml" mode="@(Mode)">
      <connections>
        <add name="input" provider="postgresql" port="5432" database="MyDD" user="postgres" password="*" />
        <add name="output" provider="internal" />
      </connections>
      <templates>
        <add name="steps" file="C:\Code\mydd\mydd\tfl\templates\steps.cshtml" engine="razor" content-type="html">
          <actions>
            <add action="copy" mode="first" to="C:\Code\mydd\mydd\tfl\output\steps.xml" />
            <add action="open" mode="first" file="C:\Code\mydd\mydd\tfl\output\steps.xml" />
          </actions>
        </add>
      </templates>
      <entities>
        <add name="app_step" alias="Step" prefix="step_" version="modified">
          <fields>
            <add name="id" type="int32" />
            <add name="recipe_id" type="int" label="recipe id" />
            <add name="section" length="128" />
            <add name="sequence" type="short" sort="asc"/>
            <add name="description" length="255" />
            <add name="created" type="datetime" />
            <add name="modified" type="datetime" />
          </fields>
        </add>
      </entities>
      <relationships/>
    </add>
  </processes>
</transformalize>