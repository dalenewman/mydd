<transformalize>
  <processes>
    <add name="ClassOrchard">
      <connections>
        <add name="input" database="TflMyDD" />
        <add name="output" provider="file" file="c:\temp\class-output.xml" header="&lt;Orchard&gt;&lt;Recipe&gt;&lt;Name&gt;Generated by Transformalize&lt;/Name&gt;&lt;Author&gt;dalenewman&lt;/Author&gt;&lt;/Recipe&gt;&lt;Data&gt;" footer="&lt;/Data&gt;&lt;/Orchard&gt;" />
      </connections>
      <templates>
        <add name="class_content" file="c:\Code\MyDD\mydd\tfl\class_content.xml" />
        <add name="blog_post" file="c:\Code\MyDD\mydd\tfl\blog-post.xml" />
      </templates>
      <actions>
        <add action="tfl" mode="*" url="c:\Code\MyDD\mydd\tfl\class.xml" before="true" after="false" />
        <add action="open" mode="*" file="c:\temp\class-output.xml" />
      </actions>
      <entities>
        <add name="ClassStar" detect-changes="false">
          <fields>
            <add name="class_title" length="512" label="class title" output="false" />
            <add name="class_image" length="255" label="class image" output="false" />
            <add name="class_description" label="class description" output="false" />
            <add name="class_cost" type="decimal" precision="6" scale="2" label="class cost" output="false" ></add>
            <add name="class_created" type="datetime" label="class created" output="false" ></add>
            <add name="class_modified" type="datetime" label="class modified" output="false" ></add>
            <add name="class_title_slug" length="512" label="title slug" output="false" ></add>
            <add name="instructor_first" length="128" label="instructor first" output="false" ></add>
            <add name="instructor_last" length="128" label="instructor last" output="false" ></add>
            <add name="instructor_avatar" length="200" label="instructor avatar" output="false" ></add>
            <add name="instructor_bio" label="instructor bio" output="false" ></add>
            <add name="instructor_created" type="datetime" label="instructor created" output="false" ></add>
            <add name="instructor_modified" type="datetime" label="instructor modified" output="false" ></add>
            <add name="instructor_full_name" length="128" label="instructor full name" output="false" ></add>
            <add name="tags" length="128" output="false" ></add>
            <add name="recipes" length="4000" output="false" ></add>
          </fields>
          <calculated-fields>
            <add name="content" length="max" primary-key="true" output="false">
              <transforms>
                <add method="velocity" parameter="*">
                  <templates>
                    <add name="class_content" />
                  </templates>
                </add>
                <add method="htmlencode" />
              </transforms>
            </add>
            <add name="blog_post" length="max" primary-key="true">
              <transforms>
                <add method="velocity" parameter="*">
                  <templates>
                    <add name="blog_post" />
                  </templates>
                </add>
              </transforms>
            </add>
          </calculated-fields>
        </add>
      </entities>
      <relationships>
      </relationships>
    </add>
  </processes>
</transformalize>